.mg-bt-md {
    padding-bottom: 40px;
    margin-top: 0;
    padding-top: 0;
}

.margin-lg {
    margin-top: 120px;
    margin-bottom: 120px;
}

.margin-bottom-lg {
    margin-bottom: 90px;
}

.padding-lg {
    padding-top: 120px;
    padding-bottom: 120px;
}


.row {
    flex-direction: row;
}

.center {
    align-items: center;
}

.justify-center {
    justify-content: center;
}

.row-reverse {
    flex-direction: row-reverse;
}

.padding-left-xxl {
    padding-left: 360px;
}

.padding-left-lg {
    padding-left: 90px;
}

.padding-right-sm {
    padding-right: 20px;
}

/*endregion*/