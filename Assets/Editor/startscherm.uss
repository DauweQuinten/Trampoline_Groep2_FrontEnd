/*variables are not a thing yet, ;(*/

/*region text*/
.outline-text {
    -unity-text-outline-color: rgb(19, 10, 1);
    -unity-font: url('project://database/Assets/Editor/resources/Fonts%20&%20Materials/MouseMemoirs-Regular.ttf?fileID=12800000&guid=7e75f74396c653544a29de5a17f26147&type=3#MouseMemoirs-Regular');
    -unity-text-outline-width: 12px;
    font-size: 152px;
    -unity-font-definition: none;
    -unity-font-style: bold;
    color: rgb(240, 223, 202);
    text-shadow: 4px 6px 4px rgba(15, 40, 13, 0.25);
    -unity-text-align: lower-center;
}

.outline-text-md {
    font-size: 112px;
    -unity-text-outline-width: 8px;
}

.outline-text-sm {
    font-size: 42px;
    text-shadow: 2px 3px 2px rgba(15, 40, 13, 0.25);
    -unity-text-outline-width: 3px;
}

.u-text-md {
    font-size: 70px;
    -unity-text-outline-width: 5px;
    -unity-text-align: middle-center;
}

/*endregion*/

/*region colors*/
.transparent-gray-background {
    background-color: rgba(0, 0, 0, 0.7);
}

/*endregion*/

/* region images */

.c-score-image {
    position: relative;
    margin-top: 5;
    margin-bottom: 5;
    max-height: 270px;
}

.u-list-img {
    max-width: 80px;
    max-height: 60px;
    margin-left: 15px;
}

.img {
    height: 100%;
    width: 100%;
    -unity-background-scale-mode: scale-to-fit;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

.img-relative {
    height: 100%;
    width: 100%;
    -unity-background-scale-mode: scale-to-fit;
    position: relative;
}

.button {
    position: relative;
    height: 96px;
    width: 165px;
    margin-left: 20px;
    margin-right: 20px;
}

.avatar {
    height: 480px;
    width: 480px;
    border-radius: 48px;
}

/*endregion*/

/*region assets*/

.button-base {
    background-image: url('project://database/Assets/Editor/resources/Button/Bluebottom36000.png?fileID=2800000&guid=2de0889becbace94a937f3af86c831ca&type=3#Bluebottom36000');
}

.button-top {
    background-image: url('project://database/Assets/Editor/resources/Button/TopBoxPS.png?fileID=2800000&guid=d8185efced5606d428d67b42587ec49a&type=3#TopBoxPS');
}

.button-base-yellow {
    background-image: url('project://database/Assets/Editor/resources/Button/ButtonYellowBottomPS.png?fileID=2800000&guid=0a4d4a18a7973594e97f2d2f6a7fb64e&type=3#ButtonYellowBottomPS');
}

.button-top-yellow {
    background-image: url('project://database/Assets/Editor/resources/Button/ButtonTopYellowPS.png?fileID=2800000&guid=068a0f9dd8edd14479dc9dfbc2485bc8&type=3#ButtonTopYellowPS');
}

/*todo change this to real assets*/
.placeholder-image {
    background-image: url('project://database/Assets/Editor/resources/placeholderImage.png?fileID=2800000&guid=8975d575386fa664b952b65456eee517&type=3#placeholderImage');
    height: 200px;
    width: 250px;
}

.wood-sign-img {
    background-image: url('project://database/Assets/Editor/resources/woodTextureNew.png?fileID=2800000&guid=b46f2831e3ccf2749a51b8535cbc0032&type=3#woodTextureNew');
}

.arrow-right {
    background-image: url('project://database/Assets/Editor/resources/arrow.png?fileID=2800000&guid=7ca675d5750bf654586da3afd8970df9&type=3#arrow');
    position: relative;
}

/*endregion*/

/*region transitions*/
.button-animation {
    transition-property: translate;
    transition-duration: 0.1s;
    transition-timing-function: ease;
}

.move-down {
    translate: 0 14px;
}

/*endregion*/

/*region lists*/
.u-list-label {
    min-width: 250px;
}

.c-score-list-item {
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.c-user-list {
    background-color: #FA781A;
    corner-radius: 10px;
}

/*endregion*/

/*region containers*/
.c-board {
    flex-direction: row;
    justify-content: space-around;
}

.container {
    height: 100%;
    width: 100%;
    margin-top: 0;
    padding-top: 0;
    background-color: rgba(0, 0, 0, 0.6);
    align-items: center;
    justify-content: center;
}

.container.transparent {
    background-color: rgba(0, 0, 0, 0);
}

.full-width {
    width: 100%;
}

.justify-between {
    justify-content: space-around;
}

.horizontal {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.horizontal * {
    padding-right: 20px;
}

.c-UserScore {
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

/*endregion*/

/*region positioning*/
.bottom {
    position: absolute;
    bottom: 30px;
    left: 30px;
    right: 30px;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.top {
    position: absolute;
    top: 30px;
    left: 30px;
    right: 30px;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.left {
    position: absolute;
    left: 45px;
    top: 30px;
    bottom: 30px;
    align-items: flex-start;
    justify-content: center;
}

.bottom-right {
    position: absolute;
    bottom: 30px;
    right: 30px;
}

.bottom-left {
    position: absolute;
    bottom: 30px;
    left: 30px;
}

/*endregion*/

/*region shark bar ü¶àüç´*/

.shark-distance-bar {
    height: 60%;
    width: 80px;
    border-radius: 20px;
    border-color: rgb(19, 10, 1);
    background-color: rgb(211, 200, 160);
    flex-direction: column-reverse;
    border-width: 15px;
}

.shark-distance-bar-position {
    flex-direction: column-reverse;
    background-color: rgb(79, 153, 173);
    height: 40%;
    border-color: rgb(19, 10, 1);
}

/*endregion*/

